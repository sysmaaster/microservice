<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">
    Editing: <%= categories_item.name %>
  </h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active"><%= categories_item.name %></li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>Last Updated: <%= new Date(categories_item.updatedAt).toUTCString() %></b>
      <b> Id:</b> <%= categories_item.id %>
    </div>
  </div>
</div>
<%= categories_item.id %>
<form action="/categories/edit/<%= categories_item.id %>" method="post">
    <div class="row form-group mb-4">
      <div class="col-6 col-sm-4">
        <label for="name">name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          value="<%= categories_item.name %>"
          placeholder="категр"
          required
        />
      </div>
  
     

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update categories</button>
  </div>
</form>


