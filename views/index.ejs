<!-- Header-->
<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Dashboard</h1>

  <div class="btn-toolbar mb-2 mb-md 0">
    <!--btn New Wallet-->
    <%- include('partials/modal/wallet/add'); -%>
    <!--btnt end-->

    <!--btn New Categories-->
    <div class="btn-group me-2">
      <%- include('partials/modal/categories/add'); -%>
      <!--btnt end-->
    </div>
  </div>
</div>

<!--btnt Header-->

<!-- ALERT -->
<% messages.forEach(element => { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= element %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% }) %>
<!-- END aert  -->

<div class="row">
  <div class="col">
    <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th scope="col">W_NAME</th>
            <th scope="col">W_COMMENT</th>
            <th scope="col">SUMMA</th>
            <th scope="col">LIMIT</th>
            <th scope="col">CCY</th>
            <th scope="col">TYPE</th>
            <th scope="col">HOVER</th>
            <th scope="col" class="text-end">Action</th>
          </tr>
        </thead>

        <tbody v-cloak>
          <% wallets.forEach(item => { %>
          <tr class="align-middle">
            <td><%= item.W_NAME %></td>
            <td><%= item.W_COMMENT %></td>
            <td><%= item.SUMMA %></td>
            <td><%= item.LIMIT %></td>
            <td><%= item.CCY %></td>
            <td><%= item.TYPE %></td>
            <td><%= item.HOVER %></td>
            <td class="text-end">
              <div class="d-flex flex-row justify-content-end gap-2">
                <a
                  href="/wallet/view/<%= item.id%>"
                  type="button"
                  class="btn btn-primary btn-small"
                >
                  <i class="bi bi-eye"></i>
                </a>
                <a
                  href="/wallet/edit/<%=  item.id %>"
                  type="button"
                  class="btn btn-warning btn-small"
                >
                  <i class="bi bi-pencil"></i>
                </a>

                <form
                  action="/wallet/drop/<%=  item.id %>"
                  method="post"
                  class="position-relative"
                >
                  <button type="submit" class="btn btn-danger btn-small">
                    <i class="bi bi-person-x"></i>
                  </button>
                </form>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-8">
    <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th scope="col">name</th>
            <th scope="col" class="text-end">Action</th>
          </tr>
        </thead>

        <tbody v-cloak>
          <% categories.forEach(item => { %>
          <tr class="align-middle">
            <td><%= item.name %></td>
            <td class="text-end">
              <div class="d-flex flex-row justify-content-end gap-2">

                <a
                  href="/categories/edit/<%=  item.id %>"
                  type="button"
                  class="btn btn-warning btn-small"
                >
                  <i class="bi bi-pencil"></i>
                </a>

                <form
                  action="/categories/drop/<%=  item.id %>"
                  method="post"
                  class="position-relative"
                >
                  <button type="submit" class="btn btn-danger btn-small">
                    <i class="bi bi-person-x"></i>
                  </button>
                </form>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Dashboard Pagination -->
    <% if (categories.length > 100) { %>
    <nav aria-label="Dashboard Pagination">
      <ul class="pagination justify-content-center mt-5">
        <% if (current == 1) { %>
        <li class="page-item disabled">
          <a href="#" class="page-link">First</a>
        </li>
        <% } else { %>
        <li class="page-item">
          <a href="/?page=1" class="page-link">First</a>
        </li>
        <% } %> <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %> <%
        if(i !== 1) { %>
        <li class="page-item disabled">
          <a href="#" class="page-link">...</a>
        </li>
        <% } %> <% for(; i <= (Number(current) + 4) && i <= pages; i++ ) { %> <%
        if (i == current) { %>
        <li class="page-item disabled">
          <a href="#" class="page-link"><%= i %></a>
        </li>
        <% } else { %>
        <li class="page-item">
          <a href="/?page=<%= i %>" class="page-link"><%= i %></a>
        </li>
        <% } %> <% if (i == Number(current) + 4 && i < pages) { %>
        <li class="page-item disabled">
          <a href="#" class="page-link">...</a>
        </li>
        <% } %> <% } %> <% if (current == pages) { %>
        <li class="page-item disabled">
          <a href="#" class="page-link">Last</a>
        </li>
        <% } else { %>
        <li class="page-item">
          <a href="/?page=<%= pages %>" class="page-link">Last</a>
        </li>
        <% } %>
      </ul>
    </nav>
    <% } %>
    <!-- Dashboard Pagination -->
  </div>
</div>
